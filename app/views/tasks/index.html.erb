

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Note</th>
      <th>Creation</th>
      <th>Modification</th>
      <th>Deadline</th>
      <th>Category</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% @total = 0 %>

  <tbody>
    <% @tasks.each do |task| %>
      <%= @total += 1 %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.note %></td>
        <td><%= task.creation %></td>
        <td><%= task.modification %></td>
        <td><%= task.deadline %></td>
        <td><%= task.category %></td>
        <td><%= task.tags %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% if @total == 0 %>
      <tr>
        <td colspan=10><center>No tasks yet. Create one <%= link_to 'here', new_task_path %></center></td>
      </tr> 
    <% end %>
  </tbody>
</table>

<br>

